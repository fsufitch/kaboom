{
    "name": "kaboomchess",
    "build": {
        "context": "..",
        "dockerfile": "../Containerfile",
        "args": {
            "USERNAME": "${localEnv:USER}" // host username into build
        }
    },
    // Tell VS Code which user to run as
    "remoteUser": "${localEnv:USER}",
    "containerUser": "${localEnv:USER}",
    // On Linux, adjust UID/GID to match your host user
    "updateRemoteUserUID": true,
    "mounts": [
        // Mount the bazel cache to a volume to speed up builds
        "source=kaboom-bazel-cache,target=/bazel-cache,type=volume"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "eamodio.gitlens",
                "foxundermoon.shell-format",
                "ms-azuretools.vscode-docker",
                "wdhongtw.gpg-indicator",
                "yzhang.markdown-all-in-one",
                "openai.chatgpt",
                "DrBlury.protobuf-vsc",
                "BazelBuild.vscode-bazel",
                "vadimcn.vscode-lldb",
                "xaver.clang-format",
                "llvm-vs-code-extensions.vscode-clangd"
            ]
        }
    },
    "updateContentCommand": "bash .devcontainer/init-bazel.sh ."
}